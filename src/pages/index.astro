---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/home/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Logo4aGC from '../assets/logo-4agc.svg';
import LogoFitz from '../assets/logo-fitz.png';
import Image from 'astro/components/Image.astro';
---

<Layout>
  <div class="wrap">
    <Header />
    <Hero />

    <div class="pb-12">
      <h2>Projects</h2>

      <div class="space-y-6">
        <ProjectCard
          image={Logo4aGC}
          alt="4aGoodCause"
          text="Full-stack web applications including SaaS functionality, payment processing and user accounts."
          href="/projects/4agoodcause"
        />

        <ProjectCard
          image={LogoFitz}
          alt="Friends for Fitz"
          text="Full-stack web applications including SaaS functionality, payment processing and user accounts."
          href="/projects/friends-for-fitz"
        />
      </div>
    </div>

    <Footer />
  </div>
</Layout>
