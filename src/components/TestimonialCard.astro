---
const { text, image, imageAlt, name, title } = Astro.props;
import Image from 'astro/components/Image.astro';
---

<div class="bg-zinc-100 p-6 rounded-xl lg:flex lg:flex-col lg:justify-between">
  <p class="text-lg mb-6">"{text}"</p>

  <div class="flex items-center gap-4">
    <div>
      <Image src={image} alt={imageAlt} class="w-[80px]" />
    </div>

    <div>
      <div class="font-bold text-sm">{name}</div>
      <div class="text-sm">{title}</div>
    </div>
  </div>
</div>