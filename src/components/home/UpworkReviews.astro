---
import Stars from '@components/Stars.astro';
import ReviewCard from '@components/ReviewCard.astro';
import { getCollection } from 'astro:content';
import reviews from 'src/data/reviews.json';
---

<div class="pb-12 mb-12 lg:pb-20">
  <div class="grid gap-1 mb-8">
    <Stars />
    <h3 class="text-2xl font-bold">Five Star Upwork Reviews</h3>
  </div>

  <div class="grid lg:grid-cols-3 gap-4">
    <div class="flex flex-col gap-4">
      <ReviewCard text={reviews[0].text} />
      <ReviewCard text={reviews[1].text} />
      <ReviewCard text={reviews[2].text} />
      <ReviewCard text={reviews[9].text} />
      <ReviewCard text={reviews[10].text} />
    </div>

    <div class="flex flex-col gap-4">
      <ReviewCard text={reviews[3].text} />
      <ReviewCard text={reviews[4].text} />
      <ReviewCard text={reviews[5].text} />
      <ReviewCard text={reviews[11].text} />
      <ReviewCard text={reviews[12].text} />
      <ReviewCard text={reviews[13].text} />
      <ReviewCard text={reviews[14].text} />
    </div>

    <div class="flex flex-col gap-4">
      <ReviewCard text={reviews[6].text} />
      <ReviewCard text={reviews[7].text} />
      <ReviewCard text={reviews[8].text} />
    </div>
  </div>
</div>